@using MyEndProjectCode.Areas.View_Models

@model SliderUpdateVM

@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5">
    <h1>Slider </h1>

    <div class="slider-content">

     <img style="width:100px; height:100px;" src="~/assets/images/@Model.Image"/>

    </div>


    <form class="form-sample" asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" >
     
     <input  class="form-control" id="customFile" asp-for="Photo"  />


       <div class="mt-5">
            <label for="formFile" class="form-label my-2">Add Title</label>
            <input class="form-control" id="customFile" asp-for="Title" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>


          <div class="mt-5">
            <label for="formFile" class="form-label my-2">Add First Description</label>
            <input class="form-control" id="customFile" asp-for="Description" />
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

          <div class="mt-5">
            <label for="formFile" class="form-label my-2">Add Second Description</label>
            <input class="form-control" id="customFile" asp-for="EndDesc" />
            <span class="text-danger" asp-validation-for="EndDesc"></span>
        </div>


     <div class="buttons my-3">
     <button type="submit" class="btn btn-primary mr-2">Submit</button>
     <a class="btn btn-light" asp-action="Index">Cancel</a>
     </div>

    </form>

    

</div>
