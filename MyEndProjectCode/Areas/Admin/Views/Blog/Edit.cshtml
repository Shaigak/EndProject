@using MyEndProjectCode.Areas.View_Models



@model BlogUpdateVM



@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5">
    <form class="forms-sample" asp-action="Edit" method="post" enctype="multipart/form-data">

        <div class="mt-5">
            @foreach (var item in Model.Images)
            {
                <img src="~/assets/images/@item.Image" style="width: 150px; height: 150px;" />
            }
        </div>

        <div class="mt-5">
            <label for="formFile" class="form-label my-2">Add Photo</label>
            <input class="form-control" id="customFile" asp-for="Photos" />
        </div>

        <div class="mt-5">
            <label for="formFile" class="form-label my-2">Add Title</label>
            <input class="form-control" id="customFile" asp-for="Title" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="mt-5">
            <label for="formFile" class="form-label my-2">Add Description</label>
            <textarea class="form-control" id="category" asp-for="Description" rows="5"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>



        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>

</div>


 }