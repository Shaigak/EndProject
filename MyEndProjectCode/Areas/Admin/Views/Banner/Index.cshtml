@using MyEndProjectCode.Models

@model IEnumerable<Banner>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Banner</h1>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>   
                    
                     <th>
                        Description
                    </th> 

                     <th>
                        Operations
                    </th> 

                </tr>
            </thead>
            <tbody>
                <a class="btn btn-outline-info" asp-action="Create" style="float:right;">Create </a>
                @foreach (var item in Model)
                {
                    <tr>

                       
                        <td class="py-1">
                              <img class="bannerimage" src="~/assets/images/@item.Image"/>
                        </td>

                         <td class="py-1">
                             @item.Description
                        </td>
                       




                        <td>

                            @*<a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@item.Id">Info</a>*@
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                            <form style="display:inline-block;" asp-action="Delete" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>


                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

