<section data-aos="fade-up" style="background-image: url(https://www.ncodetechnologies.com/zooy/images/background-bg-1600x156.jpg);" class="dealofday intro aos-init aos-animate first-sec">
    <div data-aos="fade-right" class="divday">
        <p class="p-intro">HOME<i class="bi bi-chevron-right"></i><span class="span-intro">BLOG</span></p>
        <h4 class="h4-intro">SHOP</h4>
    </div>
</section>



<section>

    <section class="products no-select">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="left-sidebar">

                        <div class="product-price">
                            <form id="filterForm" method="get" asp-controller="Shop" asp-action="Index">
                                <div class="price-title">
                                    <h3>Filter By Price</h3>
                                </div>
                                <div class="price-filter">
                                    <div class="card">
                                        <div class="price-content">
                                            <div>
                                                <label>Min</label>
                                                <p id="min-value">50</p>
                                            </div>

                                            <div>
                                                <label>Max</label>
                                                <p id="max-value">500</p>
                                            </div>


                                        </div>


                                        <div class="filter-button">
                                            <div class="range-slider">
                                                <input type="range" class="min-price" value="100" min="10" max="500"
                                                       step="10">
                                                <input type="range" class="max-price" value="250" min="10" max="500"
                                                       step="10">
                                            </div>
                                            <button class="filt" type="submit">Filter</button>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>

