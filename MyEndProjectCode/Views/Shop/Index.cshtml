                        <div class="categories">
                            <h4>Product categories</h4>


                            <a href="#" class="allprod ">

                                <span class="words all">All</span> <span class="coun">(@Model.AllProducts.Count)</span>
                            </a>






                            @foreach (var item in Model.Categories)
                            {
                                <ul>


                                    <a href="" data-id="@item.Id" class="cate">
                                        <span class="words">@item.Name</span>   <span class="coun">(@item.ProductCategories.Count())</span>
                                    </a>


                                </ul>
                            }
                        </div>
                        <div class="categories brand ">
                            <h4>BY BRAND</h4>
                            @foreach (var item in Model.BrandPros)
                            {
                                <ul>
                                    <a href="" data-id="@item.Id" class="brandcl">
                                        <span class="words">@item.Name</span>  <span class="coun">(@item.ProductBrands.Count())</span>
                                    </a>
                                </ul>



                            }
                        </div>




                        <div class="tags">
                            <h4>BY TAGS</h4>
                            @foreach (var item in Model.Tags)
                            {



                                <li>
                                    <a href="#" data-id="@item.Id" class="tagn">
                                        <span class="words">TagCode :</span>  <span class="coun">@item.Year</span>
                                    </a>
                                </li>




                            }
                        </div>
                    </div>

                    <div class="banner-img img-full">
                        <a href="#"><img class="img-fluid mx-auto" src="~/assets/images/banner.jpg" alt=""></a>
                    </div>


                </div>


                <div class="col-lg-9 products-side">
                    <div class="row product-grid-view">



                        <partial name="_ProductsPartial" model="@Model.PaginateProduct.Datas" />




