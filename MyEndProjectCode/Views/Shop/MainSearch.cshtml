@model List<Product>

@if (Model.Count() == 0)
{
    <h1 class="d-flex justify-content-center">Product not found</h1>
}
<div class="container">


    <div class="row">


        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 pb-5">

                <div>
                    <div class="productt">
                        <div class="product-image">
                            <img src="~/assets/images/@item.ProductImages?.FirstOrDefault()?.Image" alt="">
                            <div class="basket-wishlist-compare d-flex justify-content-center">
                                <div class="add-basket text-center" data-id="@item.Id">
                                    <i class="fas fa-shopping-basket"></i>
                                </div>
                            </div>
                        </div>
                        <div class="product-inf">
                            <h5> <a class="productt-name" href="./product-single.html">@item.Name</a> </h5>
                            <p><span>$</span><span class="price">@item.Price</span></p>
                        </div>
                    </div>
                </div>

            </div>

        }
    </div>
</div>


