@using MyEndProjectCode.ViewModels
@model HomeVM

@{
    ViewData["Title"] = "Home Page";
}




<section data-aos="fade-in" class="slider first-sec">



    <div class="single-item">

        @foreach (var item in Model.Sliders)
        {
            <div class="slider-content">


                <img class="sliderim" src="~/assets/images/@item.Image" />
                <p class="Collection2020">@item.Title </p>
                <h2 class="auto">@item.Description</h2>
                <p class="accer">@item.EndDesc</p>

                <div class="slide-btn">
                    <a class="btn common-btn" href="#"><span class="exp">Explore Now</span><i class="icon-next"></i></a>

                </div>
            </div>

        }


    </div>
</section>


<section data-aos="fade-up" class="best">

    <div data-aos="fade-up" class="best-seller">
        <div class="bs-text">
            <div><img src="~/assets//images//tit-deco.png" alt=""></div>
            <span class="punchline">@Model.Settings["TopSeller"]</span>
            <h2 class="sec-title">@Model.Settings["BestSeller"]</h2>
        </div>

        <div class="best-seller-card row" @*style="display: flex;"*@>

            @foreach (var item in Model.Products)
            {
                <div class="col-lg-3 col-md-6 pb-5 col-sm-12">

                    <div class="product-card">
                        <div class="badge">Hot</div>
                        <div class="product-tumb">
                            <img class="zoom" src="~/assets/images/@item.ProductImages.FirstOrDefault().Image" alt="">
                        </div>
                        <div class="product-details">
                            <span class="product-catagory">@item.Name</span>
                            <h4><a href="">@item.Description</a></h4>
                            <div class="product-bottom-details">
                                <div class="product-price">$@item.Price</div>

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div class="product-links">
                                        <a class="add-basket" data-id="@item.Id"><i class="fa fa-shopping-cart curs"></i></a>

                                        <a class="add-baskets" data-id="@item.Id"><i class="fa-solid fa-heart curs"></i></a>
                                    </div>
                                }
                                else
                                {
                                      <div class="product-links">
                                        <a class="add-basket "><i class="fa fa-shopping-cart clic curs"></i></a>

                                        <a class="add-baskets" ><i class="fa-solid fa-heart clic curs"></i></a>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>

                </div>

            }

        </div>
</section>



<section class="find-section">
    @foreach (var item in Model.Banners)
    {
        <div class="find">
            <div data-aos="fade-up" class="find-div">
                <h2 class="find-h2">@item.Description</h2>
                <a class="btn btn-dark explore" href="#"><span>Explore Now</span></a>
            </div>
            <div data-aos="fade-up" class=""><img class="foto-find" src="~/assets/images/@item.Image" alt=""></div>
        </div>

    }
</section>

<section data-aos="fade-up" class="p-category">
    <div class="bs-text">
        <div><img src="~/assets//images//tit-deco (1).png" alt=""></div>
        <span class="punchline">@Model.Settings["Popular"]</span>
        <h2 class="sec-title" style="text-align: center;">@Model.Settings["PopularCate"]</h2>
    </div>




    <div class="p-categoryrow">
        <div class="row">


            @foreach (var item in Model.Populars)
            {
                <div class=" col-lg-4 col-md-6 col-sm-12 ">
                    <div class="p-category-div cat-div">
                        <img class="imagfirst " src="~/assets/images/@item.Image" />
                        <h2 class="category1">@item.Name</h2>
                        <a class="btn btn-dark explore view-collect collect" asp-controller="Shop" asp-action="Index"><span>View Collection</span></a>
                    </div>

                </div>

            }


        </div>




    </div>
</section>


    <section data-aos="fade-up" style="background-image: url(https://www.ncodetechnologies.com/zooy/images/deal-bg.jpg);" class="dealofday">
      <div class="divday">
        <h2 style="margin-bottom: 25px;">Deal of the Day</h2>
        <h4>Turbo Diesel Timing Belt (4WD, 2WD/4WD)</h4>
       <div style="margin-top: 60px;">
        <div class="countdown-timer-container">
          <div style="display: none;" class="countdown-timer-values" id="year">2022</div>
          <div style="display: none;" class="countdown-timer-values" id="mounth">12</div>
          <div class="countdown-timer-values"  id="days">26</div>
          <div class="countdown-timer-values" id="hours">00</div>
          <div class="countdown-timer-values" id="minutes">00</div>
          <div class="countdown-timer-values" id="seconds">00</div>
          <div class="countdown-div">days</div>
          <div class="countdown-div">hours</div>
          <div class="countdown-div">minutes</div>
          <div class="countdown-div">seconds</div>
          </div>
       </div>
     
      </div>
    </section>



<section data-aos="fade-right" class="last-new">
    <div class="bs-text">
        <div><img src="~/assets/images/tit-deco (1).png" alt=""></div>
        <span class="punchline">
            @Model.Settings["News"]
        </span>
        <h2 class="sec-title">@Model.Settings["Latest"]</h2>
    </div>
    <div class="p-categoryrow">

        @foreach (var item in Model.Blogs)
        {
            <div class="p-category-div  lastnew-div shrink">
                <div><img class="last-new-img " style="width: 400px;" src="~/assets//images/@item.Images.FirstOrDefault().Image" alt=""></div>
                <div class="info-last">
                    <div class="post-date">@item.CreateDate.ToString("dd MMMMM yyyy")</div>
                    <h4><a class="blog-tit" href="blog-detail.html">@item.Title</a></h4>
                    <p class="blog-dis">@item.Title</p>
                    <a h asp-controller="Blog" asp-action="GetBlogView" asp-route-id="@item.Id" class="rmore btn1">Read more <i class="icon-right-arrow"></i></a>
                </div>
            </div>

        }



    </div>

</section>




<section data-aos="fade-in">
    <!-- karusel -->

    <div style="background-image: url(https://www.ncodetechnologies.com/zooy/images/nwsletter-back.jpg);" class="karusel1">
        <div class="container">

            <div class="col-12">

                <div class="container1">
                    <div class="faders">
                        <div class="left"></div>
                        <div class="right"></div>
                    </div>

                    <div class="items">
                        @foreach (var item in Model.Brands)
                        {
                            <div class="entry">
                                <img style="width: 100%; height: 100%;  object-fit: contain;" src="~/assets/images/@item.Image" alt="">
                            </div>
                        }



                    </div>
                </div>
            </div>

        </div>
    </div>
</section>


<section data-aos="fade-up" class="helplinesec">
    <div class="helpline">
        <div class="helpline-div">
            <div class="icon-help"><i class="bi bi-truck icon-last"></i></div>
            <div class="icon-text">
                <h3 class="last-h3">Free Shipping</h3>
                <p class="last-p">Capped at $319 per order</p>
            </div>
        </div>
        <div class="helpline-div">
            <div class="icon-help"><i class="bi bi-arrow-clockwise icon-last"></i></div>
            <div class="icon-text">
                <h3 class="last-h3">Free Delivery</h3>
                <p>Worldwide from $75</p>
            </div>
        </div>
        <div class="helpline-div">
            <div class="icon-help"><i class="bi bi-wallet2 icon-last"></i></div>
            <div class="icon-text">
                <h3 class="last-h3">Safe Payment</h3>
                <p class="last-p">With our payment gateway</p>
            </div>
        </div>
        <div class="helpline-div sondiv">
            <div class="icon-help"><i class="bi bi-gift icon-last"></i></div>
            <div class="icon-text">
                <h3 class="last-h3">Best Services</h3>
                <p class="last-p">Friendly & Supper Services</p>
            </div>
        </div>
    </div>
</section>

