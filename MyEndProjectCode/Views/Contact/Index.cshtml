
@model Contact
<section data-aos="fade-up" style="background-image: url(https://www.ncodetechnologies.com/zooy/images/background-bg-1600x156.jpg);" class="first-sec dealofday intro aos-init aos-animate">
  <div data-aos="fade-right" class="divday">
    <p class="p-intro">HOME<i class="bi bi-chevron-right"></i><span class="span-intro">CONTACT</span></p>
    <h4 class="h4-intro">CONTACT</h4>
  </div>
</section>



<section  class="ftco-section">
    <div class="container">
      <div   class="row mt-4 justify-content-center" >
        <div class="col-md-12">
          <div class="wrapper">
            <div class="row no-gutters mb-5">
              <div class="col-md-6 d-flex align-items-stretch">
                <div id="map">
                  <iframe data-aos="fade-in" src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d24313.215380891517!2d49.86191205!3d40.3833254!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2s!4v1628778602654!5m2!1sen!2s" width="100%" height="644px" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
  
                </div>
              </div>
              <div data-aos="fade-in" class="col-md-6">
                <div  class="contact-wrap w-100 p-md-5 p-4">
                  <h3 class="mb-4">Contact Us</h3>
                 
                  <form  id="contactForm" name="contactForm" class="contactForm" method="post" asp-action="PostComment">
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group">
                          <label style="color: black;" class="label" > </label>
                          <input type="text" class="form-control" asp-for="FullName" id="name" placeholder="Name">
                        </div>
                      </div>
                      <div class="col-md-6"> 
                        <div class="form-group">
                          <label style="color: black;" class="label" ></label>
                          <input type="email" class="form-control" asp-for="Email" id="email" placeholder="Email">
                        </div>
                      </div>
                      <div class="col-md-12">
                        <div class="form-group">
                          <label style="color: black;" class="label" >Subject</label>
                          <input type="text" class="form-control" asp-for="Subject" id="subject" placeholder="Subject">
                        </div>
                      </div>
                      <div class="col-md-12">
                        <div class="form-group">
                          <label style="color: black;" class="label" >Message</label>
                          <textarea name="message" class="form-control" id="message" asp-for="Message" cols="30" rows="4" placeholder="Message"></textarea>
                        </div>
                      </div>
                      <div  class="col-md-12">
                        <div class="form-group">
                          <input  type="submit" value="Send Message" class="btn bbn btn-primary btnmesagge sendmes ">
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
             
            </div>
        
          </div>
        </div>
      </div>
    </div>
  </section>


